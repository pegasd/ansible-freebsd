{{ ansible_managed | comment }}

# HTTPS
server {
  listen 443 ssl http2;
  server_name {{ vhost.name }};

  # Allow large attachments
  client_max_body_size 128M;

  # SSL options and DH parameters
  include {{ web_proxy_nginx_conf_directory }}/options-ssl-nginx.conf;
  ssl_dhparam {{ web_proxy_nginx_conf_directory }}/dhparam.pem;

  # Lets Encrypt
  # All files managed by Certbot
  ssl_certificate {{ web_proxy_letsencrypt_directory }}/live/{{ vhost.name }}/fullchain.pem;
  ssl_certificate_key {{ web_proxy_letsencrypt_directory }}/live/{{ vhost.name }}/privkey.pem;

  # Proxy
  location / {
    proxy_pass http://{{ vhost.proxy_to }};
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
  }

  # Logs
  access_log /var/log/nginx/{{ vhost.name }}.access.log;
  error_log /var/log/nginx/{{ vhost.name }}.error.log;
}

# Redirect HTTP to HTTPS
server {
  listen 80;
  server_name {{ vhost.name }};
  return 301 https://$host$request_uri;
}

# Define connection_upgrade for WebSockets support
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}
